doctype html
html
  head
    block head
      title= title
      link(rel='stylesheet', href='/stylesheets/bulma.css')
      link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
  body
    section.hero.is-light.is-medium
        // Hero navigation
        div.hero-head
            header.nav
                div.container
                    div.nav-left
                        div.nav-item
                            img(src='/images/logo.png' alt='DefaultCompany')
                    div.nav-toggle
                        span
                        span
                        span
                    div.nav-right.nav-menu
                        each item in menuItems
                          if(item.name === 'index')
                            a.nav-item(href='/') #{item.label}
                          else
                            a.nav-item(href='/pages/' + item.name) #{item.label}
        //Hero content: will be in the middle
        div.hero-body#image-block
            div.container.has-text-centered
                h1.title WebRTC service
                h2.subtitle a convenient way to talk to our experts
        // Hero footer: will stick at the bottom
        div.hero-foot
            nav.tabs
                div.container
                    ul#rooms
                        each room in rooms
                            li(class='room-' + room.id)
                                a(href='/widget/' + room.name, target="_blank") #{room.label}
                        if(isLogin)
                            li
                                a(href='/profile') Profile
                            li
                                a(href='/widgets-and-code') Widgets
                        else
                            li
                                a(href='/login') Login
    // Content block
    block content
    // Footer
    footer.footer
        div.container
            div.content.has-text-centered
                p
                    strong "Строительный двор"
                    span , все права защищены
                p
                    a.icon(href='http://sdvor.com')
                        i.fa.fa-home
