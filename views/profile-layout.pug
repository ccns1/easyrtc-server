                                                        a(href='/profile/create-company') Компанию
                                                li
                                                    if(isActive === 'create-room')
                                                        a.is-active(href='/profile/create-room') Комнату
                                                    else
                                                        a(href='/profile/create-room') Комнату
                                                li
                                                    if(isActive === 'create-user')
                                                        a.is-active(href='/profile/create-user') Пользователя
                                                    else
                                                        a(href='/profile/create-user') Пользователя
                                                li
                                                    if(isActive === 'create-page')
                                                        a.is-active(href='/profile/create-page') Страницу
                                                    else
                                                        a(href='/profile/create-page') Страницу
                                    li
                                        a(onclick='toggleList("editList");') Редактировать
                                        if(isActive === 'edit-companies' || isActive === 'edit-rooms')
                                            ul#editList
                                                li
                                                    if(isActive === 'edit-companies')
                                                        a.is-active(href='/profie/companies') Компанию
                                                    else
                                                        a(href='/profile/companies') Компанию
                                                li
                                                    if(isActive == 'edit-rooms')
                                                        a.is-active(href='/profile/rooms') Комнату
                                                    else
                                                        a(href='/profile/rooms') Комнату
